{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "./lib",
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "commonjs",
  },
  "include": [
    "src"
  ],
}
